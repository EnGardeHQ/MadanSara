# =============================================================================
# MadanSara (Audience Intelligence Walker Agent) - Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL Lakehouse)
# -----------------------------------------------------------------------------
# For local development with Docker:
DATABASE_URL=postgresql://postgres:madansara_password@localhost:5434/madansara
DATABASE_PUBLIC_URL=postgresql://postgres:madansara_password@localhost:5434/madansara
# For production:
# DATABASE_URL=postgresql://postgres:password@host:5432/madansara

# -----------------------------------------------------------------------------
# MinIO Object Storage (Bucket Storage for Lakehouse)
# -----------------------------------------------------------------------------
MINIO_ENDPOINT=madansara-minio:9000
# For local development:
# MINIO_ENDPOINT=localhost:9004
MINIO_ACCESS_KEY=madansara-minio-key
MINIO_SECRET_KEY=madansara-minio-secret-change-in-production

# -----------------------------------------------------------------------------
# Redis & Celery Configuration
# -----------------------------------------------------------------------------
REDIS_URL=redis://madansara-redis:6379/0
# For local development:
# REDIS_URL=redis://localhost:6381/0

CELERY_BROKER_URL=redis://madansara-redis:6379/0
CELERY_RESULT_BACKEND=redis://madansara-redis:6379/0
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_TIME_LIMIT=1800
CELERY_TASK_SOFT_TIME_LIMIT=1500

# Flower Monitoring
FLOWER_BASIC_AUTH=admin:madansara-flower-password-change-in-production

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production
API_VERSION=v1
PORT=8002
HOST=0.0.0.0

# Email Service (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@engarde.com
SENDGRID_FROM_NAME=En Garde

# Mailchimp (Alternative)
MAILCHIMP_API_KEY=your-mailchimp-api-key
MAILCHIMP_SERVER_PREFIX=us1

# Twilio (SMS & WhatsApp)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# Meta/Facebook Platform
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
META_ACCESS_TOKEN=your-meta-access-token

# LinkedIn API
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_ACCESS_TOKEN=your-linkedin-access-token

# Twitter/X API
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# Anthropic Claude API
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# En Garde Platform Integration
ENGARDE_API_URL=http://localhost:8000
ENGARDE_API_KEY=your-engarde-api-key

# Walker Agent Integration
WALKER_AGENT_URL=http://localhost:8001
WALKER_AGENT_API_KEY=your-walker-agent-api-key

# HITL System
HITL_APPROVAL_REQUIRED=true
HITL_WEBHOOK_URL=http://localhost:8000/api/v1/hitl/webhook

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# A/B Testing
AB_TEST_MIN_SAMPLE_SIZE=100
AB_TEST_CONFIDENCE_LEVEL=0.95

# Website Tracking
TRACKING_SDK_DOMAIN=https://track.engarde.com
TRACKING_COOKIE_DURATION_DAYS=90

# Monitoring & Logging
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn

# Feature Flags
ENABLE_EMAIL_OUTREACH=true
ENABLE_SOCIAL_DM=true
ENABLE_WEBSITE_TRACKING=true
ENABLE_AB_TESTING=true
ENABLE_UNIFIED_INBOX=true
